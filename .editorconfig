# EditorConfig is awesome: https://editorconfig.org/

# top-most EditorConfig file
root = true

[*]
insert_final_newline = true
indent_style = space
indent_size = tab
tab_width = 4
charset = utf-8
trim_trailing_whitespace = true

[*.yml]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2

